


<% if (items.length) { %>
<ul>
    <% } %>

    <% items.forEach(function(item){ %>
        <li class = "comments_block" id="<%= item.id %>">

            <div class="head">
                <a class ="comments_login" ref="/users/<%= item.owner.login %>">
                    <%= item.owner.login %>
                </a>
                <spam class="date">
                    <%= moment(item.createdAt).fromNow(); %>
                </spam>
            </div>
            <span class = "comments_body">
            <%= item.body %>
                </span>

        <br>
            <span class="link reply">REPLY</span>
            <%- include('./comments.ejs', {items: item.children}) %>
        </li>


    <% }) %>

    <% if (items.length) { %>
</ul>

<% } %>
