<% include ../layout/header.ejs %>

<link rel = "stylesheet" href = <%= assetFingerprint('/stylesheets/post.css') %>


</head>
<body class = "body_indexx">



<% include ../layout/banner.ejs%>
<div class = "main_nav">
<div class = "nav">
    <%  include ../layout/nav.ejs%>
</div>
</div>
<div class="main">

    <div class = "desktop_nav">
        <% include ../layout/desktopNav.ejs%>
    </div>
<div class="container">
    <div class="content">

    <div class="add-post">

        <form method="post" class="post-form">
            <% if (post.title) { %>
                <h2>Edit a Post</h2>
            <% } else { %>
                <h2>Create a Post</h2>
            <% }  %>

            <div class="form-group">

                <label for="post-title" class = "caption">Caption</label>
                <input type="text" class = "post_input" id="post-title" name="title" value="<%=post.title %>" />
            </div>
            <div class="form-group">
                <label for="post-body" class = "text">Text</label>
                <br>
                <textarea id="post-body" class = "post_body"><%= post.body %></textarea>
            </div>
            <input type="hidden" id="post-id" name="postId" value="<%= post.id %>">
            <div class = "container">
                <div class ="row">

            <div id="fileinfo">

                <% post.uploads.forEach(function(upload) {  %>
                    <div class="img-container" id = "<%= upload.id %>">
                        <img src="/uploads<%= upload.path %>" alt="" />
                    </div>
                <% }) %>

                <label for="file" class="custom-file-upload">
                    <input class = "file" type="file" name="file" id="file" required />
                </label>
            </div>
                    </div>

                            <div class="buttons">
                                <button class="publish-button new">PUBLISH</button>

                                <button class="save-button secondary-inverse old">SAVE DRAFT</button>
                            </div>

                    </div>
            </div>

        </form>


    </div>

    </div>

</div>
</div>

<% include ../layout/footer.ejs %>
